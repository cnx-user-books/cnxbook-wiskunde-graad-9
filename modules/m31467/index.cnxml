    </para>
    <para id="id1167574090492"/>
    <figure id="id1167575591053">
      <media id="id1167575591053_media" alt="">
        <image mime-type="image/png" src="../../media/Picture 40.png" id="id1167575591053__onlineimage" height="445" width="573"/>
